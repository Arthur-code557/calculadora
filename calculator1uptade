import java.util.Scanner;

public class Clazs {

    public static void mostrarHelp() {
        System.out.println("===== AJUDA - CALCULADORA =====");
        System.out.println("Este programa executa operações básicas entre dois números.");
        System.out.println("Como usar:");
        System.out.println("  java Calculadora           -> inicia a calculadora normalmente");
        System.out.println("  java Calculadora -h        -> exibe este menu de ajuda");
        System.out.println("  java Calculadora help      -> exibe este menu de ajuda\n");
        System.out.println("Operações disponíveis no menu:");
        System.out.println("  1 - Adição (num1 + num2)");
        System.out.println("  2 - Subtração (num1 - num2)");
        System.out.println("  3 - Multiplicação (num1 * num2)");
        System.out.println("  4 - Divisão (num1 / num2)");
        System.out.println("  0 - Sair");
        System.out.println("===============================");
    }

    public static void main(String[] args) {
        if (args.length > 0 && (args[0].equalsIgnoreCase("-h") || args[0].equalsIgnoreCase("help"))) {
            mostrarHelp();
            return;
        }

        Scanner input = new Scanner(System.in);
        int opcao;

        do {
            System.out.println("===== CALCULADORA =====");
            System.out.println("1 - Adição");
            System.out.println("2 - Subtração");
            System.out.println("3 - Multiplicação");
            System.out.println("4 - Divisão");
            System.out.println("0 - Sair");
            System.out.print("Escolha uma opção: ");
            opcao = input.nextInt();

            if (opcao >= 1 && opcao <= 4) {
                System.out.print("Digite o primeiro valor: ");
                double num1 = input.nextDouble();

                System.out.print("Digite o segundo valor: ");
                double num2 = input.nextDouble();

                double resultado = 0;

                switch (opcao) {
                    case 1:
                        resultado = num1 + num2;
                        System.out.println("Resultado: " + resultado);
                        break;
                    case 2:
                        resultado = num1 - num2;
                        System.out.println("Resultado: " + resultado);
                        break;
                    case 3:
                        resultado = num1 * num2;
                        System.out.println("Resultado: " + resultado);
                        break;
                    case 4:
                        if (num2 != 0) {
                            resultado = num1 / num2;
                            System.out.println("Resultado: " + resultado);
                        } else {
                            System.out.println("Erro: divisão por zero não é permitida.");
                        }
                        break;
                }
                System.out.println();
            } else if (opcao != 0) {
                System.out.println("Opção inválida! Tente novamente.\n");
            }

        } while (opcao != 0);

        System.out.println("Calculadora encerrada. Até logo!");
        input.close();
    }
}

